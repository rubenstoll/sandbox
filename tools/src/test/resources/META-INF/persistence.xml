<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">


    <persistence-unit name="ruben" transaction-type="RESOURCE_LOCAL">
        <!--<provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>-->
        <class>org.hibernate.tutorial.em.Event</class>
        <properties>
            <!--<property name="javax.persistence.schema-generation.database.action" value="drop-and-create"/>-->
            <!--<property name="javax.persistence.schema-generation.scripts.action" value="drop-and-create"/>-->
            <!--<property name="javax.persistence.schema-generation.scripts.create-target" value="create.ddl"/>-->
            <!--<property name="javax.persistence.schema-generation.scripts.drop-target" value="drop.ddl"/>-->

            <property name="javax.persistence.jdbc.driver" value="org.apache.derby.jdbc.ClientDriver"/>
            <!--<property name="javax.persistence.jdbc.driver" value="org.apache.derby.jdbc.AutoloadedDriver"/>-->
            <property name="javax.persistence.jdbc.url"
                      value="jdbc:derby://localhost:1527//Users/ruben/databases/poncho"/>
            <property name="javax.persistence.jdbc.user" value=""/>
            <property name="javax.persistence.jdbc.password" value=""/>


            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.hbm2ddl.auto" value="create"/>

            <!-- EclipseLink should create the database schema automatically -->
            <!--<property name="eclipselink.ddl-generation" value="create-tables"/>-->
            <!--<property name="eclipselink.ddl-generation.output-mode" value="database,sql-script"/>-->

            <!--<property name="javax.persistence.sql-load-script-source" value="insert.sql"/>-->
            <!--<property name="eclipselink.logging.level" value="INFO"/>-->
        </properties>

    </persistence-unit>


    <persistence-unit name="org.hibernate.tutorial.jpa">
        <description>
            Persistence unit for the JPA tutorial of the Hibernate Getting Started Guide
        </description>

        <class>org.hibernate.tutorial.em.Event</class>

        <properties>
            <property name="javax.persistence.jdbc.driver" value="org.h2.Driver"/>
            <property name="javax.persistence.jdbc.url" value="jdbc:h2:mem:db1;DB_CLOSE_DELAY=-1;MVCC=TRUE"/>
            <property name="javax.persistence.jdbc.user" value="sa"/>
            <property name="javax.persistence.jdbc.password" value=""/>

            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.hbm2ddl.auto" value="create"/>
        </properties>

    </persistence-unit>

</persistence>
