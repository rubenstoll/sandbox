<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

  <modelVersion>4.0.0</modelVersion>
  <groupId>ch.jstollutions</groupId>
  <artifactId>sandbox</artifactId>
  <version>1</version>
  <packaging>pom</packaging>

  <modules>
    <module>core-cookbook</module>
    <module>ee</module>
    <module>primavera</module>
  </modules>

  <properties>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>

    <!--<jdk.version>1.8.0u66</jdk.version>-->

    <!-- Maven plugin properties -->
    <version.maven.war.plugin>2.6</version.maven.war.plugin>
    <version.maven.ejb.plugin>2.5.1</version.maven.ejb.plugin>
    <version.maven.ear.plugin>2.10.1</version.maven.ear.plugin>
    <version.maven.compiler.plugin>3.3</version.maven.compiler.plugin>
    <version.maven.clean.plugin>2.6.1</version.maven.clean.plugin>
    <version.maven.deploy.plugin>2.8.2</version.maven.deploy.plugin>
    <version.maven.failsafe.plugin>2.18.1</version.maven.failsafe.plugin>
    <version.maven.rpm.plugin>2.1.4</version.maven.rpm.plugin>
    <version.maven.jandex.plugin>1.0.3</version.maven.jandex.plugin>
    <version.maven.assembly.plugin>2.5.5</version.maven.assembly.plugin>
    <version.maven.javadoc.plugin>2.10.3</version.maven.javadoc.plugin>
    <version.maven.shade.plugin>2.4.1</version.maven.shade.plugin>
    <version.maven.scm.plugin>1.9.4</version.maven.scm.plugin>
    <version.maven.install.plugin>2.5.2</version.maven.install.plugin>
    <maven.compiler.target>1.8</maven.compiler.target>
    <maven.compiler.source>1.8</maven.compiler.source>
    <maven-codegeneration-plugin.version>1.7</maven-codegeneration-plugin.version>
    <maven.wildfly.plugin.version>1.1.0.Alpha4</maven.wildfly.plugin.version>
    <version.maven.jaxb2.plugin>0.13.0</version.maven.jaxb2.plugin>
    <version.maven.jaxb2.basics.plugin>0.9.5</version.maven.jaxb2.basics.plugin>
    <version.maven.jaxb2.basics.annotate.plugin>1.0.2</version.maven.jaxb2.basics.annotate.plugin>
    <version.maven.properties.plugin>1.0-alpha-2</version.maven.properties.plugin>
    <version.maven.build-helper.plugin>1.9.1</version.maven.build-helper.plugin>
    <version.maven.resources.plugin>2.7</version.maven.resources.plugin>
    <version.maven.release.plugin>2.5.2</version.maven.release.plugin>
    <version.maven.source.plugin>2.4</version.maven.source.plugin>
    <version.maven.jar.plugin>2.6</version.maven.jar.plugin>
    <version.maven.eclipse.plugin>2.10</version.maven.eclipse.plugin>
    <version.maven.cxf.plugin>3.1.2</version.maven.cxf.plugin>
    <version.maven.jgitflow.plugin>1.0-m4.3</version.maven.jgitflow.plugin>
    <version.maven.exec-plugin>1.4.0</version.maven.exec-plugin>

    <jee.version>7.0</jee.version>
    <h2.version>1.3.176</h2.version>
    <hibernate.version>4.3.8.Final</hibernate.version>

    <version.junit>4.12</version.junit>
    <version.hamcrest>2.0.0.0</version.hamcrest>
    <version.mockito>1.10.19</version.mockito>
    <version.slf4j.api>1.7.12</version.slf4j.api>
    <version.log4j>2.3</version.log4j>
    <version.javalee>3.0.7</version.javalee>
    <version.jackson>2.5.3</version.jackson>
    <version.jackson.jsr310>2.6.0</version.jackson.jsr310>
    <version.json.path>2.0.0</version.json.path>
  </properties>

  <dependencies>

    <!--JAVA EE-->
    <dependency>
      <groupId>javax</groupId>
      <artifactId>javaee-api</artifactId>
      <version>${jee.version}</version>
      <scope>provided</scope>
    </dependency>

    <!--PERSISTENCE-->
    <dependency>
      <groupId>com.h2database</groupId>
      <artifactId>h2</artifactId>
      <version>${h2.version}</version>
    </dependency>
    <dependency>
      <groupId>org.hibernate</groupId>
      <artifactId>hibernate-entitymanager</artifactId>
      <version>${hibernate.version}</version>
    </dependency>

    <!--SPRING FRAMEWORK-->
    <!--<dependency>-->
      <!--<groupId>org.springframework</groupId>-->
      <!--<artifactId>spring-context</artifactId>-->
      <!--<version>4.2.1.RELEASE</version>-->
    <!--</dependency>-->

    <!--LOGGING-->
    <dependency>
      <groupId>org.apache.logging.log4j</groupId>
      <artifactId>log4j-slf4j-impl</artifactId>
      <version>${version.log4j}</version>
    </dependency>

    <!--TESTING-->
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>${version.junit}</version>
      <scope>test</scope>
    </dependency>

    <dependency>
      <groupId>org.hamcrest</groupId>
      <artifactId>hamcrest-junit</artifactId>
      <scope>test</scope>
      <version>${version.hamcrest}</version>
    </dependency>

    <dependency>
      <groupId>org.mockito</groupId>
      <artifactId>mockito-all</artifactId>
      <version>${version.mockito}</version>
    </dependency>
  </dependencies>

  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>3.3</version>
        <configuration>
          <source>1.8</source>
          <target>1.8</target>
        </configuration>
      </plugin>
    </plugins>
  </build>
</project>